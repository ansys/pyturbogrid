[flake8]
exclude = venv, __init__.py, doc/_build, .venv
# https://www.flake8rules.com/
# api     W191, W291, W293, W391, E115, E117, E122, E124, E125, E225, E231,       E303,       F401, F403
# default W191, W291, W293, W391, E115, E117, E122, E124, E125, E225, E231, E301, E303, E501, F401, F403
# E301 - Expected 1 blank line, found 0
# E501 - Line too long (82 > 79 characters)  
select = W191, W291, W293, W391, E115, E117, E122, E124, E125, E225, E231, E301, E303, F401, F403
count = True
max-complexity = 10
max-line-length = 100
statistics = True
